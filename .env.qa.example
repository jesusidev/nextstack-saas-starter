# QA/Staging environment variables
# Copy this file to .env.qa for QA environment deployment

# Environment identifier
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=qa

# Prisma
# This URL is for connecting to the PostgreSQL container in docker-compose.qa.yml
DATABASE_URL="postgresql://appuser:apppass@postgres:5432/appdb_qa"

# Clerk Authentication
# Use separate test environment keys for QA
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_qa_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_qa_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Docker PostgreSQL configuration
PG_CONTAINER_NAME='postgres_app_qa'
POSTGRES_USER='appuser'
POSTGRES_PASSWORD='apppass'
POSTGRES_DB='appdb_qa'
PGDATA='/data/postgres-app-qa'

# Analytics
NEXT_PUBLIC_MI_ID=<your-clarity-id>
NEXT_PUBLIC_GA_TAG=G-XXXXXXXXXX

# AWS S3
S3_ASSETS_BUCKET=<your-app-name>-qa-assets
AWS_REGION=us-east-1
# IAM user credentials for QA environment
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>

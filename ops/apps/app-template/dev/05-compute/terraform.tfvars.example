# AWS Configuration
region  = "us-west-2"
profile = "default"

# Network Configuration
vpc_id    = "vpc-xxxxxxxxx"  # From ops/global outputs
subnet_id = "subnet-xxxxxxxx" # Public subnet from ops/global

# Instance Configuration
instance_name   = "app-template-dev"
instance_type   = "t3.micro"
ami_id          = "ami-xxxxxxxxx"  # Amazon Linux 2023 or Ubuntu 22.04
key_name        = "app-template-dev-key"
root_volume_size = 20

# Application Configuration
app_port    = 3000
environment = "dev"

# Security Configuration
ssh_cidr_blocks  = ["YOUR_IP/32"]  # Restrict SSH to your IP
http_cidr_blocks = ["0.0.0.0/0"]
https_cidr_blocks = ["0.0.0.0/0"]
app_cidr_blocks  = ["0.0.0.0/0"]

# Optional Features
allocate_eip  = false  # Set to true for static IP
use_database  = false  # Set to true if 04-database is deployed

# Tags
tags = {
  Project     = "AppTemplate"
  Environment = "dev"
  ManagedBy   = "terraform"
  Team        = "engineering"
}

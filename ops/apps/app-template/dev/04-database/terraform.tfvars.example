# Example terraform.tfvars for app-template database module
# Copy this file to terraform.tfvars and update values before deploying

aws_region             = "us-west-2"
aws_account_id         = "123456789012" # Replace with your account ID
aws_profile            = "default"       # Optional AWS CLI profile

name_prefix            = "app-template-dev"

# Networking - get these values from your global VPC module
vpc_id                 = "vpc-0123456789abcdef0"
private_subnet_ids     = ["subnet-0a1b2c3d4e5f6a7b8","subnet-0b1c2d3e4f5a6b7c9"]

# Which security groups may reach the DB (compute module Security Group ID)
allowed_security_group_ids = []

# Database configuration
db_name                = "app_template_db"
db_username            = "appadmin"
instance_class         = "db.t3.micro"
allocated_storage      = 20
multi_az               = false
engine_version         = "16.8"

# Backups and lifecycle
backup_retention_period = 7
deletion_protection     = false
skip_final_snapshot     = true
apply_immediately       = true

# Secrets Manager
create_secret          = true

# Tags
tags = {
  Project     = "AppTemplate"
  Environment = "dev"
  ManagedBy   = "terraform"
}

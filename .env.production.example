# Production environment variables
# Copy this file to .env.production for production environment deployment
# IMPORTANT: Never commit the actual .env.production file with real credentials
# RECOMMENDED: Use your platform's secrets management (Vercel, Railway, AWS Secrets Manager, etc.)

# Environment identifier
NODE_ENV=production

# Prisma
# This URL should point to your production database
# Use connection pooling for better performance (e.g., ?pgbouncer=true)
DATABASE_URL="postgresql://<user>:<password>@<production-db-host>:5432/<production-db>"

# Clerk Authentication
# Use production Clerk keys (pk_live_* and sk_live_*) from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_live_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Analytics
# Microsoft Clarity
NEXT_PUBLIC_MI_ID=<your-clarity-id>
# Google Analytics 4
NEXT_PUBLIC_GA_TAG=G-XXXXXXXXXX

# AWS S3 for file uploads
# RECOMMENDED: Use IAM roles instead of access keys when deploying to AWS (EC2, ECS, Lambda)
S3_ASSETS_BUCKET=<your-app-name>-production-assets
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1
# Only needed if not using IAM roles
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>

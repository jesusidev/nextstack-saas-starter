# Example environment variables for local Docker development
# Copy this file to .env.local and fill in real values.

# Database (Docker Compose Postgres)
PG_CONTAINER_NAME=postgres_app
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass
POSTGRES_DB=appdb
PGDATA=/data/postgres-app

# Prisma connection (the app container connects to the postgres service)
DATABASE_URL=postgresql://appuser:apppass@postgres:5432/appdb

# Clerk Authentication
# Get your keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Analytics (optional)
NEXT_PUBLIC_MI_ID=<your-clarity-id>
NEXT_PUBLIC_GA_TAG=G-XXXXXXXXXX

# AWS S3 for file uploads
S3_ASSETS_BUCKET=<your-app-name>-dev-assets
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1
# IAM user credentials (or use IAM roles when deploying to AWS)
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>

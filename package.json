{
  "name": "nextstack-saas-starter",
  "version": "1.0.0",
  "scripts": {
    "build": "next build",
    "dev": "concurrently \"npm run dev:next\" \"npm run format:watch\" --names \"next,biome\" --prefix name --prefix-colors \"cyan,yellow\"",
    "dev:next": "next dev --turbo",
    "dev:only": "next dev --turbo",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:docker:push": "docker compose exec app npm run db:push",
    "db:docker:migrate": "docker compose exec app npm run db:migrate",
    "db:docker:studio": "docker compose exec app npm run db:studio",
    "db:check": "./scripts/db-helper.sh",
    "lint": "biome lint . && tsc --noEmit",
    "lint:fix": "biome lint --write . && tsc --noEmit",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "format:only": "biome format --write . || echo 'Formatting completed'",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format:watch": "nodemon",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "prepare": "husky",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "./scripts/docker-build.sh --target development",
    "docker:build": "./scripts/docker-build.sh --target production",
    "docker:build:push": "./scripts/docker-build.sh --target production --push",
    "docker:qa": "docker-compose -f docker-compose.qa.yml up",
    "docker:qa:build": "./scripts/docker-build.sh --target qa",
    "docker:prod": "docker-compose -f docker-compose.production.yml up",
    "docker:clean": "docker system prune -a -f && docker volume prune -f"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "biome check --write --unsafe --no-errors-on-unmatched"
    ],
    "ops/**": []
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/client-sts": "^3.840.0",
    "@aws-sdk/s3-request-presigner": "^3.842.0",
    "@clerk/nextjs": "^6.23.3",
    "@clerk/themes": "^2.2.54",
    "@emotion/react": "^11.14.0",
    "@emotion/server": "^11.11.0",
    "@fontsource/roboto": "^5.2.6",
    "@fontsource/work-sans": "^5.2.6",
    "@mantine/carousel": "^8.3.5",
    "@mantine/core": "^8.3.5",
    "@mantine/form": "^8.1.2",
    "@mantine/hooks": "^8.3.5",
    "@mantine/notifications": "^8.3.5",
    "@prisma/client": "^6.11.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tabler/icons-react": "^3.34.0",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-query-devtools": "^5.81.5",
    "@trpc/client": "^11.4.3",
    "@trpc/next": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "cookies-next": "^6.0.0",
    "embla-carousel-react": "^8.6.0",
    "lenis": "^1.3.14",
    "motion": "^12.23.24",
    "next": "^15.3.5",
    "next-connect": "^1.0.0",
    "prisma": "^6.11.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "stylis-plugin-rtl": "^2.1.1",
    "superjson": "2.2.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@clerk/testing": "^1.13.10",
    "@playwright/test": "^1.54.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
